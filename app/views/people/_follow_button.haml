.follow-button-container
  - if @current_user.follows?(person)
    = link_to person_follower_path(person, @current_user), :method => "delete", :remote => true, :class => "btn btn--violet follow-button unfollow button-hoverable" do
      .content.hover-content
        = t(".unfollow")
      .content.default-content
        = t(".following")
  - else
    = link_to [ person, :followers ], :method => "post", :remote => true, :class => "btn btn--violet follow-button" do
      = t(".follow")


      