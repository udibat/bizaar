.row
  .col-4
    .input-icon-holder
      = label_tag :name_field, class: 'label-icon' do
        %i.icon-search
      = text_field :name_field, '', placeholder: 'Any', class: 'input'
  .col-3
    = text_field :place_field, '', class: 'input'
  .col-2
    .input-icon-holder.search
      = label_tag :name_field, class: 'label-icon' do
        %i.icon-search.search-btn-icon
      = submit_tag 'Search', class: 'search-btn'

