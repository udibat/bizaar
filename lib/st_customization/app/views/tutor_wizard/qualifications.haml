            .col-6
              = link_to 'Get my badge!', '#', class: 'btn btn--green block submit_remote_form_btn'
            .col-6
              = link_to "Skip this step", tutor_wizard_skip_step_path(@tutor_status.signup_status), class: 'btn btn--violet block'
