            .uploaded-file-container
              .uploaded-file
                .thumb-block
                .file-action-block
                  .name File name
                  = link_to 'Choose another photo', '#', class: 'green link underline'
                  = link_to 'Remove this photo', '#', class: 'green link underline'
              = link_to 'Get my badge!', '#', class: 'btn btn--violet get-badge'
